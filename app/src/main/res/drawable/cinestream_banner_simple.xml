<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/banner_cinestream.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0a0e27"
                android:centerColor="#1a1f3a"
                android:endColor="#0a0e27"
                android:type="linear" />
        </shape>
    </item>

    <!-- Left film strip decoration -->
    <item
        android:left="50dp"
        android:top="40dp"
        android:width="30dp"
        android:height="240dp">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" />
        </shape>
    </item>

    <item
        android:left="90dp"
        android:top="40dp"
        android:width="30dp"
        android:height="240dp">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" />
        </shape>
    </item>

    <!-- Right film strip decoration -->
    <item
        android:left="1800dp"
        android:top="40dp"
        android:width="30dp"
        android:height="240dp">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" />
        </shape>
    </item>

    <item
        android:left="1840dp"
        android:top="40dp"
        android:width="30dp"
        android:height="240dp">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" />
        </shape>
    </item>

    <!-- Play button circle background -->
    <item
        android:left="115dp"
        android:top="90dp"
        android:width="130dp"
        android:height="130dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#e50914"
                android:endColor="#b20710"
                android:angle="0"
                android:type="linear" />
        </shape>
    </item>

</layer-list>