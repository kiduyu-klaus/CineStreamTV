<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/episodeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/episode_normal_background">

    <!-- Episode Thumbnail -->
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/episodeThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#333" />

        <ImageView
            android:id="@+id/playIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_circle"
            android:visibility="gone"
            app:tint="@color/white" />

    </RelativeLayout>

    <!-- Episode Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/episodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chapter One: The Vanishing of Will Byers - S1,E1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2" />

        <TextView
            android:id="@+id/episodeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="July 15, 2016"
            android:textColor="@color/gray_light"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/episodeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="On his way home from a friend's house, young Will sees something terrifying..."
            android:textColor="@color/gray_light"
            android:textSize="12sp"
            android:maxLines="2" />

    </LinearLayout>

</LinearLayout>